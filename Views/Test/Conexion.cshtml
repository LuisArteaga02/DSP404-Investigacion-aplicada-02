@model InvestigacionAplicada02.Controllers.TestConexionViewModel

@{
    ViewData["Title"] = "Test de Conexión";
}

<div class="container mt-5">
    <h2>Test de Conexión a Azure SQL Database</h2>

    @if (Model.ConexionExitosa)
    {
        <div class="alert alert-success">
            <h4>@Model.Mensaje</h4>
            <p>@Model.Detalles</p>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Biblioteca")" class="btn btn-primary">Ir a Biblioteca</a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Ir al Inicio</a>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <h4>@Model.Mensaje</h4>
            <p>@Model.Detalles</p>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Volver al Inicio</a>
        </div>
    }
</div>