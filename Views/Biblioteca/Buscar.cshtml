@{
    ViewData["Title"] = "Buscar Material";
}

<h2>Buscar Material por Código</h2>

<form method="post" asp-action="Buscar">
    <label for="codigo">Código del Material:</label>
    <input type="text" name="codigo" id="codigo" required />
    <button type="submit">Buscar</button>
</form>

@if (ViewBag.Resultado != null)
{
    <p><strong>Resultado:</strong> @ViewBag.Resultado</p>
}

<a href="/Biblioteca/Index">Volver al listado</a>