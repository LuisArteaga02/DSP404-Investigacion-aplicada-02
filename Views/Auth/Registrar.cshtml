@model InvestigacionAplicada02.Models.Usuario

@{
    ViewData["Title"] = "Registrar Nuevo Usuario";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Registro de Usuario</h3>
            </div>
            <div class="card-body">
                <form asp-action="Registrar" method="post">
                
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <span>@error.ErrorMessage</span>
                        
                                <br />
                            }
                        </div>
                    }

                    <!-- Campo Email -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Campo Nombre -->
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre completo" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- Campo Password -->
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Campo Confirmar Password -->
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmarPassword" class="form-label"></label>
                        <input asp-for="ConfirmarPassword" type="password" class="form-control" placeholder="Repita su contraseña" />
                        <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                    </div>

                    <!-- Botones -->
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary w-100">Registrarse</button>
                    </div>

                    <div class="text-center">
                        <a asp-action="Login">¿Ya tienes una cuenta? Inicia sesión</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
      
        document.querySelector('form').addEventListener('submit', function (e) {
            const password = document.querySelector('#Password').value;
            const confirmarPassword = document.querySelector('#ConfirmarPassword').value;

            if (password !== confirmarPassword) {
                e.preventDefault();
                alert('Las contraseñas no coinciden');
                return false;
            }
        });
    </script>
}